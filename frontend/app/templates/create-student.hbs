{{!-- Data entry form --}}
<h2 class="mt-4">Add New Student</h2>
<hr>
<form {{on 'submit' this.addStudent}}>
  <div class="form-group mt-2 mb-2 col-4 d-flex align-items-center">
    <label for="name" class="col-4">Name:</label>
    <input type="text" id="name" class="form-control" {{on "change" this.updateName}} required />
  </div>

  <div class="form-group mt-2 mb-2 col-4 d-flex align-items-center">
    <label for="dateOfBirth" class="col-4">Date of Birth:</label>
    <input type="date" id="dateOfBirth" class="form-control" {{on "change" this.updateDateOfBirth}} />
  </div>

  <div class="form-group mt-2 mb-2 col-4 d-flex align-items-center">
    <label for="studentClass" class="col-4">Student Class:</label>
    <select id="studentClass" class="form-select" {{on "change" this.updateStudentClass}}>
      <option value="IT Class" selected>IT Class</option>
      <option value="Math Class">Math Class</option>
      <option value="Literature Class">Literature Class</option>
    </select>
  </div>

  <div class="form-group mt-2 mb-2 col-4 d-flex align-items-center">
    <label for="year" class="col-4">Year:</label>
    <input type="number" id="year" class="form-control" {{on "change" this.updateYear}} required />
  </div>

  <div class="form-group mt-2 mb-2 col-4 d-flex align-items-center">
    <label for="quarter" class="col-4">Quarter:</label>
    <select id="quarter" class="form-select" {{on "change" this.updateQuarter}}>
      <option value="Q1" selected>Q1</option>
      <option value="Q2">Q2</option>
      <option value="Q3">Q3</option>
      <option value="Q4">Q4</option>
    </select>
  </div>

  <div class="form-group mt-2 mb-2 col-4 d-flex align-items-center">
    <label for="mathGrade" class="col-4">Math Grade:</label>
    <input type="number" id="mathGrade" class="form-control" {{on "change" this.updateMathGrade}} required />
  </div>

  <div class="form-group mt-2 mb-2 col-4 d-flex align-items-center">
    <label for="computerGrade" class="col-4">IT Grade:</label>
    <input type="number" id="computerGrade" class="form-control" {{on "change" this.updateComputerGrade}} required />
  </div>

  <div class="form-group mt-2 mb-2 col-4 d-flex align-items-center">
    <label for="literatureGrade" class="col-4">Literature Grade:</label>
    <input type="number" id="literatureGrade" class="form-control" {{on "change" this.updateLiteratureGrade}}
      required />
  </div>
  <div class="mt-4 d-flex justify-content-center col-4">
    <button type="submit" class="btn btn-primary">
      Add Student
    </button>
  </div>
</form>